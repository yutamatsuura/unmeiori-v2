{
  "name": "kyusei-service",
  "version": "1.0.0",
  "description": "九星気学マイクロサービス",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "build": "tsc",
    "build:docker": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:calculation": "jest tests/kyusei-calculation.test.ts",
    "test:calculation:watch": "jest tests/kyusei-calculation.test.ts --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.4.5",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"]
  }
}