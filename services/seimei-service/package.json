{
  "name": "seimei-service",
  "version": "1.0.0",
  "description": "姓名判断マイクロサービス",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "build": "tsc",
    "build:docker": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "jest tests/seimei-api.test.ts --verbose --detectOpenHandles",
    "test:api:watch": "jest tests/seimei-api.test.ts --watch --verbose"
  },
  "dependencies": {
    "@types/node-cache": "^4.1.3",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
